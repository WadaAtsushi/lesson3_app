<div class="container mx-auto" style="margin-top: 40px">
<h1>「<%= @post.title %>」の編集ページ</h1>

<%= form_for(@post, url: edit_post_path, multipart: true) do |f| %>
  
  <%= tag.div f.label :title, class:"post-new-label" %>
  <%= f.text_field :title, class: "form-control" %>
  <%= tag.div f.label :"イベント", class:"post-new-label" %>
  <%= f.collection_select :event_id, Event.all, :id, :event_name, include_blank: "選択してください" %>
  <%= tag.div f.label :content, class:"post-new-label" %>
  <%= f.text_area :content, class: "form-control" %>
  <%= tag.div f.label :image, class:"post-new-label" %>
  <%= f.file_field :image, class:"post-new-label" %>
  <%= tag.div f.submit "編集", class: "btn btn-primary post-new-label" %>

<% end %>


