<div class="container mx-auto" style="margin-top: 40px">
<h1>新規投稿</h1>

<%= form_for(@post, url: create_post_path, multipart: true) do |f| %>
    <%= tag.div f.label :title, class: "post-new-label" %>
    <%= f.text_field :title, class: "form-control" %>
    <%= tag.div f.label :"イベント", class:"post-new-label" %>
    <%= f.collection_select :event_id, Event.all, :id, :event_name, {include_blank: "選択してください"},{class: "form-control input-sm"} %>
    <%= tag.div f.label :content, class: "post-new-label" %>
    <%= f.text_area :content, class: "form-control"%>
    <%= tag.div f.label :image, class: "post-new-label" %>
    <%= f.file_field :image_post %>
    <%= tag.div f.submit"投稿", class: "btn btn-primary post-new-label" %>
<% end %>
</div>

