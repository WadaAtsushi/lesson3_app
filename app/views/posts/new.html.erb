<div class="container mx-auto" style="margin-top: 40px">
<h1>新規投稿</h1>
<%= form_tag("/posts/create",{multipart: true}) do %>
  <form >
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">title</label>
      <input name="title" class="form-control" value="<%= @post.title %>">
    </div>
      <label for="exampleDataList" class="form-label">event</label>
      　　<select name="event" class="form-control" list="datalistOptions" id="exampleDataList" value="<%= @post.event %>">
      　　  <datalist id="datalistOptions">
      　　    <% @event_names.each do |event_naem| %>
       　　    <option value="<%= event_naem %>"><%= event_naem %></option>
       　　   <% end %>
           </datalist>
         </select>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">content</label>
      <textarea name="content" type="password" class="form-control" rows="3" ><%= @post.content %></textarea>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">image</label>
      <div>
        <input name="image" type="file" >
      </div>
    </div>
    <input class="btn btn-primary" type="submit" value="投稿" >
  </form>
<% end %>

</div>