<div class="container mx-auto" style="margin-top: 40px">
<h1>投稿一覧</h1>

<table class="table">
  <thead>
    <%= tag.tr %>
      <%= tag.th "タイトル" %>
      <%= tag.th "投稿者" %>
      <%= tag.th "投稿日" %>

  </thead>

  <tbody>
    <% if @posts %>
      <% @posts.each do |post| %>
        <% if post.del_flag != 1 %>
          <%= tag.tr %>
            <%= tag.td link_to(post.title,"/posts/#{post.id}/show") %>
            <%= tag.td post.user.name %>
            <%= tag.td post.created_at %>
      <% end %>
    <% end %>
  </tbody>

  </div>





