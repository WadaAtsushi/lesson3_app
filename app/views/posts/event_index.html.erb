<div class="container mx-auto" style="margin-top: 40px">
<h1>イベント別の投稿一覧</h1>

<%= form_for(@post_search, url: event_search_path) do |f| %>
  <%= f.collection_select :event_id, Event.all, :id, :event_name, include_blank: "イベントを選択してください" %>
  <%= f.submit"検索", class: "btn btn-primary post-new-label" %>
<% end %>

<table class="table">
<thead>
    <tr>
    <th scope="col">タイトル</th>
    <th scope="col">作成日</th>
    </tr>
</thead>

<tbody>
  <% if @posts %>
  <% @posts.each do |post| %>
      <tr>
      <td><%= link_to(post.title,"/posts/#{post.id}/show") %></td>
      <td><%= post.created_at %></td>
      </tr>
  <% end %>
<% end %>
</tbody>

  