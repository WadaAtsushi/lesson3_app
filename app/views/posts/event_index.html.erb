<div class="container mx-auto" style="margin-top: 40px">
<h1>イベント別の投稿一覧</h1>

<% @event_names.each_with_index do |event_name,i| %>
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="<%="heading#{i}"%>">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="<%="#collapse#{i}"%>" aria-expanded="false" aria-controls="<%="collapse#{i}"%>">
              <%= event_name %>
          </button>
        </h2>
        <div id="<%="collapse#{i}"%>" class="accordion-collapse collapse" aria-labelledby="<%="heading#{i}"%>" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            <table class="table">
            <thead>
                <tr>
                <th scope="col">タイトル</th>
                <th scope="col">作成日</th>
                </tr>
            </thead>

            <tbody>
            <% @posts.each do |post| %>
              <% if post.event == event_name    %>
                <tr>
                <td><%= link_to(post.title,"/posts/#{post.id}/show") %></td>
                <td><%= post.created_at %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
<% end %>
</div>