<div class="container mx-auto" style="margin-top: 40px">
  <%= tag.h1 "ログイン" %>
    <%= form_for(@user, url: user_login_path) do |f| %> 
        <%= f.label :"メールアドレス", class: "post-new-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "sample@sample.com" %>
        <%= f.label :"パスワード", class: "post-new-label" %>
        <%= f.text_field :password, class: "form-control", type: "password" %>
        <%= f.submit "ログイン" , class: "btn btn-primary post-new-label" %>
    <% end %>
    
</div>