<div class="container mx-auto" style="margin-top: 40px">
<h1><%= @user.email %>の投稿一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">作成日</th>
    </tr>
  </thead>

  <tbody>
  <% @user.posts.each do |post| %>
    <tr>
      <td><%= link_to(post.title,"/posts/#{post.id}/show") %></td>
      <td><%= post.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>